@model ProdigyScout.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>List of Students</h1>

<p>
    <a asp-action="Create">Create New Student</a>
</p>

<form asp-controller="Prospects" asp-action="Index">
    <p>
        First Name: <input type="text" name="FirstNameSearch" />
        Last Name: <input type="text" name="LastNameSearch" />
        GPA Floor: <input type="text" name="GradePointSearch" />
        Graduating After: <input type="text" name="GradYearSearch" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FirstNameSortParm"]">@Html.DisplayNameFor(model => model.FirstName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LastNameSortParm"]">@Html.DisplayNameFor(model => model.LastName)</a>
            </th>
            <th>
                Email ID
            </th>
            <th>
                Gender
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GPASortParm"]">@Html.DisplayNameFor(model => model.GPA)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GraduationDateSortParm"]">@Html.DisplayNameFor(model => model.GraduationDate)</a>
            </th>
            <th>
                Edit | Details | Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Students) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GraduationDateFormatted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
