                    {
                        <form asp-action="MarkAsUnwatch" method="post"> 
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="image" src="./goldstar.png" alt="Mark as Unwatch" width="30" height="30">
                        </form>
                    }
                </td>
                <td class="align-middle">
                    @if (item.ComplexDetails == null || !item.ComplexDetails.IsPipeline) //NonPipeline
                    {
                    <form asp-action="MarkAsPipeline" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="image" src="./nohandshake.png" alt="Mark as Pipeline" width="30" height="30" class="opacity-50">
                    </form>
                    }
                    else //Pipeline
                    {
                    <form asp-action="MarkAsNonPipeline" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="image" src="./yeshandshake.png" alt="Mark as Non Pipeline" width="30" height="30">
                    </form>
                    }
                </td>
                <td class="align-middle">
                        <b>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</b>
                </td>
                <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Degree)
                </td>
                <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.GPA)
                </td>
                <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.GraduationDateFormatted)
                </td>
                <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Gender)
                </td>
                    <td class="align-middle">
                        @if (item.ResumePath != null)
                        {
                            <a class="btn btn-outline-success" asp-controller="Prospects" asp-action="Download" asp-route-path="@item.ResumePath"><b>Download Resume</b></a>
