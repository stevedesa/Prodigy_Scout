@model ProdigyScout.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="my-3 py-3">
    <h2><b>Your List of Prodigies!</b></h2>
</div>

<div class="container-fluid" style="display: flex; align-items: center; justify-content: space-between;">
    <p style="display: flex; align-items: center;">
        <a asp-controller="Prospects" asp-action="Create" class="btn btn-info custom-createbutton"><b>Create New Student</b></a>
    </p>

    <form action="@Url.Action("Index", "Prospects")" method="get">
        <div class="filter-row" style="margin-bottom: 15px;">
            <div class="form-group" style="height: 40px; display: flex; align-items: center;">
                @* <label for="FilterBy"><b>Filter:</b></label> *@
                <select id="FilterBy" name="FilterBy" class="form-control" style="height: 40px;">
                    <option value="">Filter By ...</option>
                    @foreach (var option in Model.FilterOptions)
                    {
                        <option value="@option">@option</option>
                    }
                </select>
            </div>
            <div class="form-group" style="height: 40px; display: flex; align-items: center;">
                <input type="text" id="SearchTerm" name="SearchTerm" class="form-control" style="height: 40px;" />
            </div>
            <button type="submit" class="btn btn-primary" style="display: flex; align-items: center; justify-content: center;
                    width: 100px; height: 40px;">
                <b>Search</b>
            </button>
        </div>
    </form>

    <p style="display: flex; align-items: center;">
        <label style="margin-right: 5px;"><b>View:</b></label>
        <button onclick="toggleView('listView')" class="btn btn-success" style="display: flex; align-items: center; justify-content: center;
        margin-right: 10px; width: 50px; height: 40px;">
            <b>List</b>
        </button>
        <button onclick="toggleView('cardView')" class="btn btn-danger" style="display: flex; align-items: center; justify-content: center;
        width: 50px; height: 40px;">
            <b>Card</b>
        </button>
    </p>
</div>

<style>
    .custom-card {
        height: 400px;
        margin: 10px;
    }

    .card-body {
        text-align: center;
    }

    .custom-createbutton {
        width: 200px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .filter-row {
        display:flex;
        flex-direction: row;
        gap: 10px;
        align-items: center;
        justify-content: center;
    }

    .bdr {
        border-radius: 10px;
        overflow: hidden;
    }
</style>

<div id="cardView" style="display: none;">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var item in Model.Students)
        {
            <div class="col">
                <div class="card custom-card">
                    <div class="card-body">
                        <h5 class="card-title">@item.FirstName @item.LastName</h5>
                        <p class="card-text">Email: @item.Email</p>
                        <p class="card-text">Gender: @item.Gender</p>
                        <p class="card-text">GPA: @item.GPA</p>
                        <p class="card-text">Graduation Date: @item.GraduationDateFormatted</p>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div id="listView" class="bdr">
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-info">
                <th class="align-middle" scope="col">
                    <image src="./blackstar.png" alt="Watch Student?" width="30" height="30">
                </th>
                <th class="align-middle" scope="col">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Name</a>
                </th>
                <th class="align-middle" scope="col">
                    Email ID
                </th>
                <th class="align-middle" scope="col">
                    Gender
                </th>
                <th class="align-middle" scope="col">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["GPASortParm"]">@Html.DisplayNameFor(model => model.GPA)</a>
                </th>
                <th class="align-middle" scope="col">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["GraduationDateSortParm"]">@Html.DisplayNameFor(model => model.GraduationDate)</a>
                </th>
                <th class="align-middle" scope="col">
                    Edit | Details | Delete
                </th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
    @foreach (var item in Model.Students) {
            <tr>
                    <td class="align-middle">
                    @if (item.ComplexDetails == null || !item.ComplexDetails.IsWatched) //UnWatched
                    {
                        <form asp-action="MarkAsWatch" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="image" src="./unstarred.png" alt="Mark as Watch" width="30" height="30">
                        </form>
                    }
                    else //Watched
                    {
                        <form asp-action="MarkAsUnwatch" method="post"> 
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="image" src="./goldstar.png" alt="Mark as Unwatch" width="30" height="30">
                        </form>
                    }
                </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                 
                </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Email)
                    
                </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Gender)
                    
                </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.GPA)
                    
                </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.GraduationDateFormatted)
                    
                </td>
                    
                    <td class="align-middle">
                        <a asp-action="Edit" asp-route-id="@item.Id"><b>Edit</b></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><b>Details</b></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><b>Delete</b></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<script>
    function toggleView(viewId) {
        var listView = document.getElementById('listView');
        var cardView = document.getElementById('cardView');

        if (viewId === 'listView') {
            listView.style.display = 'block';
            cardView.style.display = 'none';
        } else if (viewId === 'cardView') {
            listView.style.display = 'none';
            cardView.style.display = 'block';
        }
    }
</script>
