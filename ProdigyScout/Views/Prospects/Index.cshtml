@model ProdigyScout.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Index";
}
<div style="display: flex; align-items: center; justify-content: space-evenly; margin-bottom: 20px;">
    <h2>List of Students</h2>
</div>

<div style="display: flex; align-items: center; justify-content: space-evenly;">
    <p style="display: flex; align-items: center;">
        <a asp-controller="Prospects" asp-action="Create" class="btn btn-info custom-createbutton" style="margin-right: 10px;"><b>Create New Student</b></a>
    </p>

    <form asp-controller="Prospects" asp-action="Index" style="margin-right: 10px;">
        <p style="display: flex; align-items: center;">
            <label style="margin-right: 5px;">Name:</label>
            <input type="text" name="FullNameSearch" style="margin-right: 10px; height: 40px;" />

            <label style="margin-right: 5px;">Min GPA:</label>
            <input type="text" name="GradePointSearch" style="margin-right: 10px; height: 40px;" />

            <label style="margin-right: 5px;">Min Grad Date:</label>
            <input type="text" name="GradYearSearch" style="margin-right: 10px; height: 40px;" />

            <input type="submit" value="Filter" class="btn btn-secondary" style="display: flex; align-items: center; justify-content: center;
            margin-right: 10px; width: 50px; height: 40px;" />
        </p>
    </form>

    <p style="display: flex; align-items: center;">
        <label style="margin-right: 5px;">View:</label>
        <button onclick="toggleView('listView')" class="btn btn-success" style="display: flex; align-items: center; justify-content: center;
        margin-right: 10px; width: 50px; height: 40px;">
            <b>List</b>
        </button>
        <button onclick="toggleView('cardView')" class="btn btn-danger" style="display: flex; align-items: center; justify-content: center;
        margin-right: 10px; width: 50px; height: 40px;">
            <b>Card</b>
        </button>
    </p>
</div>

<style>
    .custom-card {
        width: 300px;
        height: 300px;
        margin: 10px;
    }

    .card-body {
        text-align: center;
    }

    .custom-createbutton {
        width: 200px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div id="cardView" style="display: none;">
    <div class="row">
        @foreach (var item in Model.Students)
        {
            <div class="col-md-3">
                <div class="card custom-card">
                    <div class="card-body">
                        <h5 class="card-title">@item.FirstName @item.LastName</h5>
                        <p class="card-text">Email: @item.Email</p>
                        <p class="card-text">Gender: @item.Gender</p>
                        <p class="card-text">GPA: @item.GPA</p>
                        <p class="card-text">Graduation Date: @item.GraduationDateFormatted</p>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div id="listView">
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-info">
                <th scope="col">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["FirstNameSortParm"]">@Html.DisplayNameFor(model => model.FirstName)</a>
                </th>
                <th scope="col">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["LastNameSortParm"]">@Html.DisplayNameFor(model => model.LastName)</a>
                </th>
                <th scope="col">
                    Email ID
                </th>
                <th scope="col">
                    Gender
                </th>
                <th scope="col">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["GPASortParm"]">@Html.DisplayNameFor(model => model.GPA)</a>
                </th>
                <th scope="col">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["GraduationDateSortParm"]">@Html.DisplayNameFor(model => model.GraduationDate)</a>
                </th>
                <th scope="col">
                    Edit | Details | Delete
                </th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
    @foreach (var item in Model.Students) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GPA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GraduationDateFormatted)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<script>
    function toggleView(viewId) {
        var listView = document.getElementById('listView');
        var cardView = document.getElementById('cardView');

        if (viewId === 'listView') {
            listView.style.display = 'block';
            cardView.style.display = 'none';
        } else if (viewId === 'cardView') {
            listView.style.display = 'none';
            cardView.style.display = 'block';
        }
    }
</script>
